<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.Kirje" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.Kirje" parent="Base.Theme.Kirje">

    </style>

    <style name="MessageOut">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/lighterBackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">160dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageIn">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/darkerBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">160dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:gravity">start</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>